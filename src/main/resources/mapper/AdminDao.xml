<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "io.github.tawn0000.curation.dao.AdminDao">
    <select id = "queryAdmin" resultType = "io.github.tawn0000.curation.entity.Admin">
        select *
        from [dbo].[Admin]
        ORDER BY a_id ASC
    </select>

    <select id="queryAdminByid" resultType="io.github.tawn0000.curation.entity.Admin">
        select *
        from [dbo].[Admin]
        where a_id = #{adminId}
    </select>

    <insert id="insertAdmin" useGeneratedKeys="true" keyProperty="id" keyColumn="a_id" parameterType="o.github.tawn0000.curation.entity.Admin">
        INSERT into
        [dbo].[Admin](wc_id,a_password,a_name,a_level)
        values
                (#{wc},#{password},#{name},#{level})
    </insert>

    <update id="updateAdmin" parameterType="o.github.tawn0000.curation.entity.Admin">
        update [dbo].[Admin]
        <set>
            wc_id = #{wc}
            a_password = #{password}
            a_name  = #{name}
            a_level = #{level}
        </set>
        where a_id = #{id}
    </update>

    <delete id="deleteAdmin" >
        delete from
                [dbo].[Admin]
        where a_id = #{adminId}
    </delete>
</mapper>